<?php

/*
	Object Oriented User Data Validator
	By: Liam Kelly
	1/2/13
*/

class validate {
	
	public function verify ($data, $type) {
		
		//verify data based upon type
		switch ($type) {
			
			//check for a number
			case "n":
			 return is_numeric($data);
			break;
			
			//check for a boolean number
			case "b":
			 return is_bool($data);
			break;
			
			//check for a string
			case "s":
			 return is_string($data);
			break;
			
			//return false if the $type provided is not valid
			default:
			 return false;
			break;
			
		}
		
	}
	

}

?>
