    a {
        color: #000;
        text-decoration: none;
    }
    a:hover, li{
        color: white;
    }

    body, nav ul {
        margin: 0 auto;
    }
    body {
        width: 90%;
        text-align: center;
        font: 95%/1.5 sans-serif;
    }
    table{
        margin-left: auto;
        margin-right: auto;
        border-collapse:collapse;
    }
    li{
        list-style-type: none;
        display: inline;
        font-size: 23px;
        padding: 10px;
        color: #35639d;
    }
    li:hover{
        background-color: #35639d;
        color: white;
    }
    body:after, body:before {
        position: fixed;
        content: '';
        display: block;
        top: 0;
        left: -8px;
        width: 5%;
        height: 110%;
        box-shadow: inset 0 -12px 24px #000;
        background-color: #4FABFF;
    }
    body:after {
        right: -8px;
        left: auto;
        background-color: #4FABFF;
    }
    footer {
        border-top: 1px solid #aaa;
        text-align: center;
        font-size: 85%;
    }